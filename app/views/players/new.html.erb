<h1>Nuevo usuario</h1>

<%= form_for @player do |f| %>


	<% if flash.alert %>
		<div class="alert"><%= flash.alert %></div>		
	<% end %>

	<% if flash.notice %>
		<div class="notice"><%= flash.notice %></div>		
	<% end %>

	<div id="error_explanation" class="ui error message">
    	<h2 class='header'>
    	<% if @player.errors.any?%>
    		<%= pluralize(@player.errors.count, "error") %> han ocurrido:
    		</h2>
      		<ul>
      			<% @player.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
      		<% end %>
      	<% end %>
      	</ul>
    </div>
	<!--
    -->

	<p>
		<%= f.label :Correo %><br>
		<%= f.email_field :email %>
	</p>
	
	<p>
		<%= f.label :Nombre %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :"Nombre de usuario" %><br>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :Puntos %><br>
		<%= f.number_field :points %>
	</p>

	<p>
		<%= f.label :"Â¿Activar su cuenta?" %><br>
		<%= f.check_box :active %> 
	</p>
	<p>
		<%= f.submit "Guardar" %>
	</p>

<% end %>



